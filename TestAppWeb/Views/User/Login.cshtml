@{
    ViewData["Title"] = "Login Page";
}
@model TestAppServices.UserService.Dto.LoginDto
<div class="row">
    <div class="row login-box">
        <div class="col-12">
            <form asp-controller="User" asp-action="LoginUser">
                <div class="mb-3">
                    <div class="row">
                        <div class="col-sm-12 align-center">
                            <h4>Test App Login</h4>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <div class="col-sm-12 align-center text-red">
                            @ViewBag.error
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <div class="col-sm-3">
                            <label class="form-label">Email address</label>
                        </div>
                        <div class="col-sm-9">
                            <input type="email" asp-for="UserName" class="form-control">
                            @Html.ValidationMessageFor(x=>x.UserName,"",new { @class="text-red"})
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <div class="col-sm-3">
                            <label class="form-label">Password</label>
                        </div>
                        <div class="col-sm-9">
                            <input type="password" asp-for="Password" class="form-control">
                            @Html.ValidationMessageFor(x=>x.Password,"",new { @class="text-red"})
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <div class="col-sm-3">
                        </div>
                        <div class="col-sm-9  text-start">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
